#:kivy 2.3.0

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundBoxLayout@BoxLayout+BackgroundColor>

<WriteIt>:
    text_box: text_box
    talk_button: talk_button

    BackgroundBoxLayout:
        background_color: .2, .2, .2, 1
        size: root.size
        orientation: 'vertical'
        padding: 10
        spacing: 20

        BackgroundBoxLayout:
            background_color: .1, .1, .1, 1
            size_hint: 1, 0.75

            Label:
                id: text_box
                text: "Hello world "*10
                padding: 10
                text_size: self.width, self.height
                halign: 'left'
                valign: 'top'

        AnchorLayout:
            size_hint: 1, 0.25
            anchor_y: 'bottom'

            Button:
                id: talk_button
                text: "Push to talk"
                size_hint: .5, 1
                on_release: root.update_text()
