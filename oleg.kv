#:kivy 2.3.0

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: .2, .2, .2, 1

<BackgroundLabel@Label+BackgroundColor>
    background_color: .5, .5, .5, .5

<BackgroundAnchorLayout@AnchorLayout+BackgroundColor>
    background_color: .1, .1, .1, 1

<WriteIt>:
    BackgroundBoxLayout:
        size: root.size
        orientation: 'vertical'
        padding: 10
        spacing: 20

        BackgroundAnchorLayout:
            size_hint: 1, 0.75

            Label:
                text: "Hello world "*10
                padding: 10
                text_size: self.width, self.height
                halign: 'left'
                valign: 'top'

        AnchorLayout:
            size_hint: 1, 0.25
            anchor_y: 'bottom'

            Button:
                text: "Push to talk"
                size_hint: .5, 1
                on_release: print('Hello')
